// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:dev.db"
}

model Session {
  id          String    @id
  shop        String
  state       String
  isOnline    Boolean   @default(false)
  scope       String?
  expires     DateTime?
  accessToken String
  userId      BigInt?
  firstName   String?
  lastName    String?
  email       String?
  accountOwner Boolean  @default(false)
  locale      String?
  collaborator Boolean? @default(false)
  emailVerified Boolean? @default(false)
}

model TryOnResult {
  id          String   @id @default(cuid())
  customerId  String?
  productId   String
  variantId   String
  userPhoto   String
  resultImage String
  fitScore    Int
  pose        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model ProductAIConfig {
  id          String   @id @default(cuid())
  productId   String   @unique
  aiOptimized Boolean  @default(false)
  category    String?
  tags        String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}